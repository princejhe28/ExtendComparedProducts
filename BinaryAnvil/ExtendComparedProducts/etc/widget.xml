<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget_file.xsd">
<widget id="catalog_recently_compared">
    <parameters>
        <parameter name="show_same_category_items_only" xsi:type="select">
            <label translate="true">Show Same Category Items Only</label>
            <options>
                <option name="yes" value="1">
                    <label>Yes</label>
                </option>
                <option name="no" value="0">
                    <label>No</label>
                </option>
            </options>
        </parameter>
    </parameters>
</widget>
</widgets>
